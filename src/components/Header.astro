---
import logo from '../img/thai-sensation-logo.png';
import { Image } from "astro:assets";
import SocialMedia from './SocialMedia.astro';
---
<header
  class="fixed z-[1000] top-0 left-0 w-screen h-auto"
  id="header"
>
  <div class="header content flex items-center flex-wrap w-[1200px]">
    <div class="nav-content brand lg:py-2">
      <a class="uppercase text-white-main text-lg font-semibold" href="/Massage-Thai-Website"
        ><Image src={logo} alt="logo" width="120" height="200"></a
      >
    </div>
    <div class="nav-content lg:max-w-[1032px] flex flex-wrap justify-center">
      <div class="hidden lg:flex items-center text-xs ml-5">
        <div class="flex gap-3">
          <ul class="flex gap-3">
            <li>
              <a href="tel:0755054654">0755054654 </a>
            </li>
            &#8226;
            <li>
              <a href="" target="_blank">Strada Ion Ambreescu 18</a>
            </li>
            &#8226;
          </ul>
          <p class="uppercase">Duminică - Miercuri:<span class="ml-2">11:00 - 16:00 PM</span></p>
          &#8226;
          <p class="uppercase">Joi - Sambată:<span class="ml-2">12:00 - 19:00 PM</span></p>
          <div class="rounded-full"></div>
        </div>
        <div class="scale-[0.6]">
          <SocialMedia/>
        </div>
    </div>

      <div
        class="nav-bar flex items-center justify-between w-full lg:w-auto px-0 lg:mb-[9px] lg:mt-[-4px]"
      >
       
        <div class="nav-list">
          <div
            class="hamburger relative h-[60px] w-[60px] border-[3px] border-solid border-white-main rounded-full flex items-center justify-center z-[100] cursor-pointer scale-[0.8] md:mr-4"
          >
            <div class="bar h-[2px] w-[30px] relative bg-white-main z-[-1]"></div>
          </div>
          <ul
            class="list-none absolute w-screen h-screen left-full top-0 flex items-center flex-col z-[1] justify-center over overflow-x-hidden bg-black-main opacity-90"
          >
            <li><a href="/Massage-Thai-Website" data-after="Acasa">Acasă</a></li>
            <li><a href="/Massage-Thai-Website/preturi" data-after="Preturi">Prețuri</a></li>
            <li><a href="/Massage-Thai-Website/galerie" data-after="Galerie">Galerie</a></li>
            <li>
              <a href="/Massage-Thai-Website/regulament" data-after="Regulament">Regulament</a>
            </li>
            <li><a href="/Massage-Thai-Website/about" data-after="Despre">Despre noi</a></li>
            <li><a href="/Massage-Thai-Website/contact" data-after="Contact">Contact</a></li>
          </ul>
        </div>
    </div>

    </div>
  </div>
</header>
